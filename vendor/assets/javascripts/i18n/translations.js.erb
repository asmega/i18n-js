<% SimplesIdeias::I18n.assert_usable_configuration! %>
<% json = SimplesIdeias::I18n.translation_segments.each_with_object({}) do |(name, segment),translations|
translations.merge!(segment)
end.to_json 
  json = SimplesIdeias::I18n.escape_json(json)
%>
var I18n = I18n || {};
I18n.translations = <%= json %>;
